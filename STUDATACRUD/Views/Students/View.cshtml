@model STUDATACRUD.Models.UpdateStudentViewModel


@{
}


<section class="container-fluid  text-dark  pt-3 mt-3 rounded border shadow-lg">

    <div class="row  justify-content-center ">

        <div class=" col-8 col-md-6   rounded mt-4 mb-4 pb-3 shadow-lg ">
            <div class="border-bottom shadow-lg bg-danger text-white pt-2  rounded ">
                <h4 class=" text-darken  text-center  " style="font-size: 18px !important;">STUDENT PROFILE</h4>
            </div>

            <form class="form-group d-lg-inline fw-bold text-white " method="post" action="View">


                 <div class="mt-2">
                    <input type="text" class="form-control" placeholder="Student Number" required readonly asp-for="id">
                </div>
                
                <div class="mt-2">
                    <input type="text" class="form-control" placeholder="Student Number" required maxlength="9" asp-for="studentNumber">
                </div>
                <div class="mt-2">
                    <input type="text" class="form-control" placeholder="Firstname" required asp-for="firstname">
                </div>
                <div class="mt-2">
                    <input type="text" class="form-control" placeholder="surname" required asp-for="surname">
                </div>
                <div class="mt-2">
                    <input type="date" class="form-control" placeholder="DOB" required asp-for="DateOfBirth">
                </div>

                <div class="text-center  d-inline-block pt-2 ">
                    <button type="submit" class="btn  btn-primary mt-2 text-uppercase ">UPDATE PROFILE</button>
                </div>
                <div class="text-center d-inline-block">
                    <button type="submit" class="btn btn-danger mt-2 text-uppercase  "  asp-action="Delete" asp-controller="Students">DELETE PROFILE</button>
                </div>



            </form>
        </div>

    </div>
    <div class="border-bottom shadow-lg  text-white p-1 mb-3  rounded ">
    </div>
</section>

