@model List<STUDATACRUD.Models.Domain.Student>

<section class="container-fluid  text-dark  pt-3 mt-3 rounded border shadow-lg">

    <div class="row ">
        <div class="col-md-12   rounded  mb-2 pb-3 ">
            <div class="border-bottom shadow-lg bg-dark text-white pt-2 mb-2 rounded ">
                <h4 class=" text-darken  text-center  " style="font-size: 18px !important;">ALL STUDENT</h4>
            </div>

            @{

                if (ViewBag.IsStudent == "No")
                {
                    <div class="text-center">
                        <p>No Students Avalailble</p>
                        <a href="@Url.Action("Add","Students")" class="btn btn-primary mt-2 text-uppercase">Add New Student</a>
                    </div>
                }
                else
                {

                    <div>
                        <table class="table table-bordered table-hover  table-striped rounded table-responsive">

                            <thead class="text-uppercase fw-bold">
                                <tr>


                                    <th>Student Number</th>
                                    <th>FirstName</th>
                                    <th>Surname</th>
                                    <th>Date OfBirth</th>
                                    <th>Profile</th>

                                </tr>
                            </thead>

                            <tbody>

                                @foreach (var Student in Model)
                                {
                                    <tr>

                                        <td class="text-dark ">@Student.studentNumber</td>
                                        <td>@Student.firstname</td>
                                        <td>@Student.surname</td>
                                        <td>@Student.DateOfBirth.ToString("ddd ,MMMM ,yyyy")</td>
                                        <td class="text-center "><a class="text-decoration-none" href="students/view/@Student.id">View Profile</a></td>


                                    </tr>
                                }

                            </tbody>


                        </table>

                    </div>

                }
            }

          



        </div>

    </div>
    <div class="border-bottom shadow-lg  text-white p-1 mb-3  rounded ">
    </div>

</section>



